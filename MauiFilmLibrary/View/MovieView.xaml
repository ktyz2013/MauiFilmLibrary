<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFilmLibrary.View.MovieView">

    <VerticalStackLayout Padding="20">
        <Image Source="{Binding TitleImg}" HeightRequest="300" Aspect="AspectFit"/>
        <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding Genres}" FontSize="18" />
        <Label Text="{Binding Description}" FontSize="16" />
        <Label Text="{Binding Actors}" FontSize="16" />
        <Label Text="{Binding ReleaseYear}" FontSize="16" />
        <Button Text="Назад" Command="{Binding CloseCommand}" BackgroundColor="Gray" TextColor="White"/>
    </VerticalStackLayout>

</ContentPage>
